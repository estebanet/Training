
@using Microsoft.Owin.Security
@{
                /**/

                Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home Page</title>
    <!-- Latest compiled and minified CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- jQuery library -->
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>

    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h2>P&aacute;gina para usuarios autenticados y autorizados.</h2>
        </div>
        <div>
            <h2>¡Enlaza tu cuenta con tus redes sociales favoritas!</h2>
            @using (Html.BeginForm("ExternalLogin", "Account"))
            {
                @Html.AntiForgeryToken();

                foreach (var authProvider in Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes())
                {
                    <p>
                        <input type="submit" id="@authProvider.AuthenticationType"
                              name="externalProvider"
                              class="btn btn-info" value="Inicia sesión con @authProvider.AuthenticationType">
                    </p>
                }
            }
        </div>
    </div>
</body>
</html>