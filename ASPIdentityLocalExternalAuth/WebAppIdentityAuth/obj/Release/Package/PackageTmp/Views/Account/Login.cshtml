@model WebAppIdentityAuth.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesi&oacute;n.</title>
    <!-- Latest compiled and minified CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- jQuery library -->
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>

    <!-- Popper JS -->
    <script src="~/Scripts/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md"></div>
            <div class="col-md">
                <div class="card" style="margin-top: 1em;">
                    <div class="card-header" style="text-align:center">Iniciar Sesi&oacute;n</div>
                    <div class="card-body">
                        <form action="" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="UserIdentifier">Usuario:</label>
                                <input type="email" class="form-control" placeholder="Usuario"
                                       id="UserIdentifier" name="UserIdentifier">
                            </div>
                            <div class="form-group">
                                <label for="Password">Contraseña:</label>
                                <input type="password" class="form-control" placeholder="Contraseña"
                                       id="Password" name="Password">
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="RememberMe" name="RememberMe"> Recordarme
                                </label>
                            </div>
                            <div style="text-align:center;">
                                <button type="submit" class="btn btn-primary">Iniciar Sesi&oacute;n</button>
                            </div>
                        </form>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.IsFailValidation))
                    {
                        <div style="margin-bottom:0;" class="alert alert-warning alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>¡Atenci&oacute;n!</strong><span>Las credenciales proporcionadas son incorrectas.</span>
                        </div>
                    }
                    </div>
                </div>
            <div class="col-md"></div>
        </div>
    </div>
</body>
</html>
