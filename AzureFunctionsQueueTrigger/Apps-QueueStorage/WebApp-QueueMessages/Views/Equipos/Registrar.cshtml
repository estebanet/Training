
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar Equipo</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#Registrar').click(function () {
                $.ajax({
                    contentType: 'application/json; charset=UTF-8',
                    data: JSON.stringify({
                        Nombre: $('#Nombre').val(),
                        Fundacion: $('#Fundacion').val(),
                        Titulos: $('#Titulos').val(),
                        Presidente: $('#Presidente').val()
                    }),
                    dataType: 'json',
                    method: 'POST',
                    url: 'Registrar',
                    success: function (data) {
                        if (data.Estado) {
                            alert('Se ha registrado el equipo en la cola exitosamente');
                        } else {
                            alert('Ha fallado el registro del equipo en la cola');
                        }
                    },
                    error: function () {
                        alert('Ha fallado la solicitud de registro de equipo');
                    }
                });
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="form-group">
            <label for="usr">Nombre</label>
            <input type="text" class="form-control" id="Nombre">
        </div>
        <div class="form-group">
            <label for="pwd">Fundacion:</label>
            <input type="date" class="form-control" id="Fundacion">
        </div>
        <div class="form-group">
            <label for="pwd">Titulos:</label>
            <input type="text" class="form-control" id="Titulos">
        </div>
        <div class="form-group">
            <label for="pwd">Presidente:</label>
            <input type="text" class="form-control" id="Presidente">
        </div>
        <div>
            <button id="Registrar" class="btn btn-info">Registrar Equipo</button>
        </div>
    </div>
</body>
</html>
