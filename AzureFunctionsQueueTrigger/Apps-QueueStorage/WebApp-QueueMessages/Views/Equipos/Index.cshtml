@{
    Layout = null;
}

@model IEnumerable<GaroData.Entities.Equipo>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Equipos Liga MX</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(function () {

        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>
                    Equipos Liga MX
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th># Equipos</th>
                            <th>Nombre</th>
                            <th>Fundaci&oacute;n</th>
                            <th>T&Iacute;tulos</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Equipo in Model)
                        {
                            <tr>
                                <td>@Equipo.IdEquipo</td>
                                <td>@Equipo.Nombre</td>
                                <td>@Equipo.Fundacion</td>
                                <td>@Equipo.Titulos</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
